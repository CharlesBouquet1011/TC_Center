[Unit]
Description=Ask user info at boottime
After=multi-user.target getty.target
[Service]
Type=oneshot
# Utiliser tty1 (standard)
TTYPath=/dev/tty1
ExecStart=/usr/local/bin/k3s.sh
TimeoutStartSec=0
StandardInput=tty
TTYVHanghup=yes
TTYVTDisallocate=yes
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
